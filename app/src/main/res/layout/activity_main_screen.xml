<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmed.dermogo20.MainScreen">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/detectorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="111dp"
            android:text="Detector"
            android:onClick="goToDetector"
            android:layout_below="@+id/doctorButton"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/doctorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:layout_marginTop="53dp"
            android:text="Find a Doctor"
            android:onClick="goToDoctor"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Search"
            android:layout_alignBottom="@+id/doctorButton"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_marginTop="68dp"
            android:text="Menus"
            android:layout_below="@+id/detectorButton"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/menuButton"
            android:layout_alignBottom="@+id/menuButton"
            android:layout_alignLeft="@+id/searchButton"
            android:layout_alignStart="@+id/searchButton"
            android:text="About" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
